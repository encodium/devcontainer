{
  "name": "Local Development",
  "dockerComposeFile": "compose.yaml",
  "service": "shell",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": "true",
      "installOhMyZsh": true,
      "upgradePackages": false
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "moby": false
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder}/workspace,target=/workspace,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.devcontainer/scripts,target=/home/vscode/.devcontainer/scripts,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/logs,target=/home/vscode/.devcontainer/logs,type=bind,consistency=cached"
  ],
  "containerEnv": {
    "USERNAME": "vscode",
    "XDEBUG_CONFIG": "client_host=host.docker.internal log=/home/vscode/.devcontainer/logs/xdebug.log"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "xdebug.php-debug",
        "eamodio.gitlens",
        "bmewburn.vscode-intelephense-client",
        "Natizyskunk.sftp"
      ],
      "settings": {
        "php.validate.executablePath": "/usr/local/bin/php",
        "php.debug.executablePath": "/usr/local/bin/php",
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/usr/bin/zsh"
          }
        },
        "search.useIgnoreFiles": false,
        "search.exclude": {
          "**/node_modules": true,
          "**/vendor": true,
          "**/dist": true,
          "**/coverage": true,
          "**/coverage-src": true,
          "**/logs": true
        },
        "workbench.panel.defaultLocation": "bottom",
        "workbench.panel.opensMaximized": "never",
        "terminal.integrated.showExitAlert": false,
        "terminal.integrated.automationProfile.linux": {
          "path": "/usr/bin/zsh"
        }
      }
    }
  },
  "initializeCommand": "bash ${localWorkspaceFolder}/.devcontainer/scripts/initialize.sh",
  "postCreateCommand": "bash ~/.devcontainer/scripts/on-create.sh",
  "postAttachCommand": "bash ~/.devcontainer/scripts/on-attach.sh",
  "remoteUser": "vscode",
  "containerUser": "vscode"
}